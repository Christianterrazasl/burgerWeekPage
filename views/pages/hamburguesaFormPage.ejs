<%- include('../components/header') %>
    <div class="container p-3">
        <h1 class="mb-3"><%= hamburguesa ? 'Editar hamburguesa' : 'Agregar hamburguesa' %></h1>

        <form action="<%= hamburguesa ? "/api/hamburguesa/"+idRestaurant+'/'+hamburguesa.id+'/edit' :"/api/hamburguesa/"+idRestaurant %>" method="POST" class="p-4 bg-light rounded shadow" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="nombre" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="nombre" name="nombre" value="<%= hamburguesa? hamburguesa.nombre: '' %>" required>
            </div>
            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripcion</label>
                <input type="text" class="form-control" id="descripcion" name="descripcion" value="<%= hamburguesa? hamburguesa.descripcion: '' %>" required>
            </div>
            <div class="mb-3">
                <label for="precio" class="form-label">Precio</label>
                <input type="number" class="form-control" id="precio" name="precio" value="<%= hamburguesa? hamburguesa.precio: '' %>" required>
            </div>
            <div class="mb-3">
                <label for="fotoHamburguesa" class="form-label">Imagen</label>
                <input type="file" class="form-control" id="fotoHamburguesa" name="fotoHamburguesa">
                <% if (hamburguesa && hamburguesa.imagenUrl) { %>
                    <img src="<%= hamburguesa.imagenUrl %>" alt="Logo de <%= hamburguesa.nombre %>" class="img-fluid mt-2" style="max-width: 100px; max-height: 100px;">
                <% } %>
            </div>
          
            <button type="submit" class="btn btn-primary">Enviar</button>
            <a href="/admin/hamburguesa/<%= idRestaurant %>" class="btn btn-secondary">Cancelar</a>

        </form>
        
    </div>
<%- include('../components/footer') %>

<%# 
    imagen nombre : fotoHamburguesa
    /api/hamburguesa/idRestaurant
    nombre,
    descripcion,
    precio,
    imagenUrl,
    idRestaurant %>